<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="OPCIONES ANGEL">

        <CheckBoxPreference
            android:key="clave1"
            android:title="ÚNICO OS"
            android:summary="Marca si tienes preferencia por un solo O.S." />

    </PreferenceCategory>

    <PreferenceCategory android:title="OPCIONES ANGEL 2">

        <ListPreference
            android:key="clave3"
            android:title="OS"
            android:summary="Pulsa para elegir Sistema Operativo"
            android:dialogTitle="Sistemas Operativos"
            android:entries="@array/lista"
            android:entryValues="@array/clavelista" />

        <EditTextPreference
            android:key="clave2"
            android:title="VERSION DEL SISTEMA"
            android:summary="Pulsa para introducir la versión del Sistema"
            android:dialogTitle="Introduce versión" />

    </PreferenceCategory>

</PreferenceScreen>
